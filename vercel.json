{
    "builds": [
        {
            "src": "horizoncoso/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.10"
            },
            "env": {
                "PYTHON_VERSION": "3.10"
            }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles_build"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/staticfiles_build/$1"
        },
        {
            "src": "/(.*)",
            "dest": "horizoncoso/wsgi.py"
        }
    ]
}